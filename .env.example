# 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# 服务器配置
PORT=3000
NODE_ENV=development

# OpenAI API
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o
TRANSLATE_TIMEOUT_MS=20000
QUEUE_CONCURRENCY=32
TRANSLATION_SUMMARY_ENABLED=true
TRANSLATION_SUMMARY_MAX_TOKENS=500
TRANSLATION_SUMMARY_CHUNK_CHARS=12000

# 数据库
DB_PATH=./data/subtitles.db
CACHE_TTL_HOURS=720

# 缓存策略
LRU_MAX_ITEMS=1000
CLEANUP_INTERVAL_MS=3600000

# 重试策略
MAX_RETRIES=3
RETRY_BASE_MS=5000

# YouTube API
YT_FETCH_TIMEOUT_MS=5000

# 字幕处理
SEGMENT_GAP_MS=1200
SEGMENT_MIN_DURATION_MS=3000
SEGMENT_MAX_DURATION_MS=7000
SRV3_OVERLAP_GAP_MS=100

# 可选：管理接口
ADMIN_TOKEN=
